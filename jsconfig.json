{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2022",
        "jsx": "react-jsx",
        "allowImportingTsExtensions": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true
    },
    "include": [
        "src/**/*",                    
        "lib/**/*.js"                 
    ],
    "exclude": [
        "node_modules",
        "**/linear-algebra-asm.js",
        "**/node/**"
    ]
}
